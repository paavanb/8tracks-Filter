{
  "manifest_version": 2,

  "name": "8Tracks Filter",
  "description": "This extension applies a SFW mode to 8tracks, hiding all mix covers",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
  "tabs",
  "background",
  "storage",
  "*://*.8tracks.com/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "img/19_filter_on.png",
      "38": "img/38_filter_on.png"
     },
     "default_title": "8tracks filter on"
  },
  "content_scripts": [
    {
      "matches": ["*://*.8tracks.com/*"],
      "js": ["jquery.js", "filter.js"],
      "run_at": "document_idle"
    }
  ]
}
